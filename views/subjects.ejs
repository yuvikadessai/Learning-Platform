<%- include("partials/header", { title: "Notes" }) %>

<div class="container">
    <h1>Notes</h1>

    <% if (subjects.length === 0) { %>
        <p>No notes available for your course.</p>
    <% } else { %>
        <% subjects.forEach(sub => { %>
            <div class="note-card">
                <h3><%= sub.subject_name %></h3>
                <a class="btn" href="<%= sub.notes_link %>">Open Notes</a>
            </div>
        <% }) %>
    <% } %>
</div>

<%- include("partials/footer") %>
